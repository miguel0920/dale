@page
@model Dale.WebSite.Pages.Product.IndexModel
@{

}

<h1>Administración de Productos</h1>

<p>
    <a asp-page="Create">Crear producto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductDTO[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDTO[0].Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDTO[0].Value)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProductDTO)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>