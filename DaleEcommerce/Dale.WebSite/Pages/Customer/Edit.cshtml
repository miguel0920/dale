@page
@model Dale.WebSite.Pages.Customer.EditModel
@{
}
<h1>Editar cliente</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerDTO.Id" />
            <div class="form-group">
                <label asp-for="CustomerDTO.FirstName" class="control-label"></label>
                <input asp-for="CustomerDTO.FirstName" class="form-control" />
                <span asp-validation-for="CustomerDTO.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerDTO.LastName" class="control-label"></label>
                <input asp-for="CustomerDTO.LastName" class="form-control" />
                <span asp-validation-for="CustomerDTO.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerDTO.DocumentNumber" class="control-label"></label>
                <input asp-for="CustomerDTO.DocumentNumber" class="form-control" />
                <span asp-validation-for="CustomerDTO.DocumentNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerDTO.CellPhone" class="control-label"></label>
                <input asp-for="CustomerDTO.CellPhone" class="form-control" />
                <span asp-validation-for="CustomerDTO.CellPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}